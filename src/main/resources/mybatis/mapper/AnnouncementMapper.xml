<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapper标签要指定namespace属性，不然会报错，可看做包名 -->

<mapper namespace="com.ibm6.mapper.AnnouncementMapper">
	<resultMap type="com.ibm6.bean.Announcement" id="announcementResultMap">
		<result property="publisherId" column="publisher_id" />
		<result property="publishDate" column="publish_date" />
		<result property="expireDate" column="expire_date" />
		<result property="expireFlag" column="expire_flag" />	
	</resultMap>
	
	<insert id="saveNewUser" parameterType="com.ibm6.bean.User">
		insert into user(user_id, name, gender, age, email, birthday, phone,
		address, description)
		values(#{user_id}, #{name}, #{gender}, #{age}, #{email}, #{birthday}, #{phone},
		#{address}, #{description});
	</insert>
	
	<delete id="deleteById" parameterType="int">
		delete from user where user_id = #{id}
	</delete>

	<select id="findAll" resultType="com.ibm6.bean.User">
		select * from user
	</select>
	
	<select id="findById" resultType="com.ibm6.bean.User">
		select * from user where user_id = #{id}
	</select>
	
	<update id="updateById" parameterType="com.ibm6.bean.User">
		update user set 
		<if test="name!=null">
			name=#{name}
		</if>
		<if test="gender!=null">
			gender=#{gender}
		</if>
		<if test="age!=null">
			age = #{age}
		</if>
		<if test="email!=null">
			email = #{email}
		</if>
		<if test="birthday!=null">
			birthday=#{birthday}
		</if>
		<if test="phone!=null">
			phone=#{phone}
		</if>
		<if test="address!=null">
			address=#{address}
		</if>
		<if test="description!=null">
			description=#{description}
		</if>
		where user_id = #{user_id}
	</update>

</mapper>



