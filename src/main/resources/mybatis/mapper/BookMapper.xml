<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapper标签要指定namespace属性，不然会报错，可看做包名 -->

<mapper namespace="com.ibm6.mapper.BookMapper">
	<resultMap type="com.ibm6.bean.Book" id="bookResultMap">
		<result property="bookId" column="book_id" />
		<result property="storeDate" column="store_date" />
		<result property="leftAmount" column="left_amount" />
		<result property="uploadAmount" column="upload_amount" />
		<result property="downloadAmount" column="download_amount" />
	</resultMap>

	<select id="findByCondition" parameterType="com.ibm6.bean.Book">
		select * from Book
		<where>
			<if test="nation!=null">
				name=#{name}
			</if>
			<if test="type!=null">
				gender=#{gender}
			</if>
			<if test="length!=null">
				age = #{age}
			</if>
			<if test="theme!=null">
				email = #{email}
			</if>
		</where>
	</select>

	<insert id="saveNewUser" parameterType="com.ibm6.bean.User">
		insert into user(user_id,
		name, gender, age, email, birthday, phone,
		address, description)
		values(#{user_id}, #{name}, #{gender}, #{age}, #{email}, #{birthday},
		#{phone},
		#{address}, #{description});
	</insert>

	<delete id="deleteById" parameterType="int">
		delete from user where
		user_id = #{id}
	</delete>

	<select id="findAll" resultType="com.ibm6.bean.User">
		select * from user
	</select>

	<select id="findById" resultType="com.ibm6.bean.User">
		select * from user where
		user_id = #{id}
	</select>


	<update id="updateById" parameterType="com.ibm6.bean.User">
		update user set
		<if test="name!=null">
			name=#{name}
		</if>
		<if test="gender!=null">
			gender=#{gender}
		</if>
		<if test="age!=null">
			age = #{age}
		</if>
		<if test="email!=null">
			email = #{email}
		</if>
		<if test="birthday!=null">
			birthday=#{birthday}
		</if>
		<if test="phone!=null">
			phone=#{phone}
		</if>
		<if test="address!=null">
			address=#{address}
		</if>
		<if test="description!=null">
			description=#{description}
		</if>
		where user_id = #{user_id}
	</update>

</mapper>



